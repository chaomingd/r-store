{
  "name": "r-model-store",
  "version": "0.0.4",
  "description": "A simple and easy-to-use react state management library",
  "homepage": "https://chaomingd.github.io/r-store",
  "keywords": [
    "react",
    "state management",
    "store",
    "react store",
    "react state management",
    "react state",
    "react state store",
    "react model",
    "react-model-store"
  ],
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run dev",
    "dev": "dumi dev",
    "build": "father build",
    "build:watch": "father dev",
    "docs:build": "dumi build",
    "docs:preview": "dumi preview",
    "prepare": "husky install && dumi setup",
    "doctor": "father doctor",
    "lint": "npm run lint:es",
    "lint:css": "stylelint --fix \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint --fix \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "change:version": "pnpm changeset && changeset version && pnpm build && pnpm lint",
    "release": "pnpm login:repository && changeset publish && git push origin --tags",
    "login:repository": "sh scripts/pnpm-login.sh"
  },
  "authors": [
    "zzengchaoming@gmail.com"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@babel/runtime": "^7.27.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/use-sync-external-store": "^1.5.0",
    "@umijs/lint": "^4.0.0",
    "ahooks": "^3.8.4",
    "antd": "^5.25.1",
    "dumi": "^2.4.13",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "immer": "^10.1.1",
    "lint-staged": "^13.3.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "use-sync-external-store": "^1.5.0"
  }
}
